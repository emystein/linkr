<div id="bookmark-header-wrapper">
  <h2 class="bookmark-header">Everyone's Bookmarks</h2>

  <%= form_tag(bookmarks_path,  method: :get, style: 'style="float: left;"' ) do %>
    <%= text_field_tag :search_query, params[:search_query] %>
    <%= submit_tag 'Search' %>
  <% end %>

  <hr class="bookmark-header">
</div>

<section>
  <% unless @bookmarks.empty? %>
    <%= render :partial => 'bookmarks/bookmark', :collection => @bookmarks %>
    <%= will_paginate @bookmarks %>
    <p class="bookmark_count"><%= pluralize(@bookmarks.count, 'Bookmark') %></p>
  <% else %>
    <h4>There are no bookmarks to display.</h4>
  <% end %>
</section>


