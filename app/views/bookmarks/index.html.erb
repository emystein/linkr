<h2>Everyone's Bookmarks</h2>

<section>
  <%= form_tag(bookmarks_path,  method: :get) do %>
    Search by title: <%= text_field_tag :search_query, params[:search_query] %>
    <%= submit_tag 'Search' %>
  <% end %>

  <% unless @bookmarks.empty? %>
    <%= render :partial => 'bookmarks/bookmark', :collection => @bookmarks %>
    <%= will_paginate @bookmarks %>
    <p class="bookmark_count"><%= pluralize(@bookmarks.count, 'Bookmark') %></p>
  <% else %>
    <h4>There are no bookmarks to display.</h4>
  <% end %>
</section>


