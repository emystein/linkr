<section>
  <h2>Latest Bookmarks</h2>
  <% unless @bookmarks.empty? %>
    <%= render :partial => 'bookmarks/mini_bookmark', :collection => @bookmarks, as: :bookmark %>
  <% else %>
    <h4>There are no bookmarks to display.</h4>
  <% end %>
</section>

<section class="tags">
  <h2>Trending Tags</h2>
  <%= @tag_count_by_date.collect{|t| link_to "#{t.name} (#{t.count})", tag_path(t.name)}.join(" ").html_safe %>
</section>
