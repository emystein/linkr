<section>
  <h3>Latest Bookmarks</h3>
  <% unless @bookmarks.empty? %>
    <%= render :partial => 'bookmarks/mini_bookmark', :collection => @bookmarks, as: :bookmark %>
  <% else %>
    <h4>There are no bookmarks to display.</h4>
  <% end %>
</section>

<section>
  <article class="taglist">
    <h3>Trending Tags</h3>
    <p class="tags"><%= @tag_count_by_date.collect{|t| link_to "#{t.name} (#{t.count})", tag_path(t.name)}.join(" ").html_safe %></p>
  </article> 
</section>
