<div id="bookmarks-header">
  <h2><%= link_to @user.nickname, user_path %></h2>
  <h2>'s Tags</h2>
  <hr>
</div>

<section>
  <% tag_cloud(@tags, %w(tag-size-1 tag-size-2 tag-size-3 tag-size-4)) do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), :class => css_class %> <%= "(#{tag.count})" %>
  <% end %>
</section>

