<!DOCTYPE html>
<html>
<head>
  <title>Linkr</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %> <%= controller.action_name %>">

  <header>
    <div class="container">
      <nav id="profile">
        <% if user_signed_in? %>
          <%= link_to "new bookmark", new_bookmark_path %> |
          <%= link_to current_user.nickname, '/dashboard' %> | 
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>  | 
          <%= link_to "help", help_path %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path %> | 
          <%= link_to 'Log in', dashboard_path  %> 
        <% end %>
      </nav>

      <h1><%= link_to "Linkr", user_signed_in? ? bookmarks_path : root_path %></h1>

      <nav id="site">
        <% if user_signed_in? -%>
          <%= link_to "Everyone", bookmarks_path %>
          <%= link_to "Bookmarks", dashboard_path %>
          <%= link_to "Tags", tags_path %>
        <% end -%>
      </nav>
    </div>
  </header>

  <% unless flash.empty? %>
    <div id="flash">
      <% flash.each do |key, value|%>
        <div class="container <%= key %>">
          <p><%= value %></p>
        </div>
      <% end %>
    </div>
  <% end %>

  <div id="main">
    <div class="container">
      <%= yield %>
    </div>
  </div>

</body>
</html>
